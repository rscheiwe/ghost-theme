{{!< default}}

<div class="{{#author}} {{#if cover_image}} fullwidthrow {{/if}} {{/author}}">
<div class="row {{#author}} {{#unless cover_image}} justify-content-center {{/unless}} {{/author}}">
  
  <div class="{{#author}} {{#if cover_image}} col-md-6 pl-5 pr-4 {{ else }} col-md-8 {{/if}} {{/author}} margtop3rem">
    
  {{#author}}
  <h1 class="secondfont mb-4">{{name}}</h1>
  <div class="d-flex">
  {{#if profile_image}}
  <img class="author-thumb mr-3" src="{{profile_image}}" alt="{{name}}">
  {{/if}}
  <div>  
  {{#if location}} {{location}} {{/if}}
  {{#if website}} <span class="bull">&bull;</span> <a target="_blank" href="{{website}}">{{website}}</a> {{/if}}
  {{#if bio}}<div class="author-description text-opacity">{{bio}}</div>{{/if}}  
  {{#if facebook}} <a  target="_blank" href="{{facebook_url}}"><i class="fa fa-facebook"></i></a> {{/if}}
  {{#if twitter}} &nbsp; <a target="_blank" href="{{twitter_url}}"><i class="fa fa-twitter"></i></a> {{/if}}
  &nbsp; <a class="social-link social-link-rss" href="{{url absolute="true"}}rss/" target="_blank"><i class="fa fa-rss"></i></a> 
  </div>
  </div>
  {{/author}}
    
  {{!-- Author's posts --}}
  <section class="mt-5">  
  <div class="allstories">  
  {{#foreach posts}}                
  {{> "post-card"}}
  {{/foreach}}
  {{pagination}}
  </div>
  </section>

  </div>
  
  {{#author}}
  {{#if cover_image}}
  <div class="col-md-4 order-md-first">
  <div class="sticky-top">
  <img src="{{ cover_image }}" class="image-sidebar-author">
  </div>
  </div>
  {{/if}}
  {{/author}}
  
</div>    
</div>




