{{!< default}}

{{#post}}

<section class="default-post">
<div class="row mt-3 align-items-center">  
<div class="col-md-6 pr-lg-4">
<span class="tags">{{tags}}</span>
<h1 class="posttitle display-4 postheading">{{title}}</h1>
{{> "post-authors"}}
{{> "post-meta"}}
</div>
<div class="col-md-6">
<img class="featured-image img-fluid rounded" src="{{feature_image}}" alt="">
</div>
</div>

<div class="row mt-4">
<div class="col-lg-8 col-md-10 col-xs-12 flex-first flex-md-unordered">
<div class="article-post {{post_class}}">
{{content}}
</div>
</div>
<div class="col-lg-2 col-md-2 col-xs-12 order-md-first">
<div class="sticky-top sticky-sidebar-offset">
{{> "share"}}
</div>
</div>
</div>
</section>

{{> "disqus"}}

{{> "alertbar"}}

{{/post}}
